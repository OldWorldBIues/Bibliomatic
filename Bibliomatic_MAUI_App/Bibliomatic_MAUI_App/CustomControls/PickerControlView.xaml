<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Bibliomatic_MAUI_App.CustomControls.PickerControlView">

    <StackLayout BackgroundColor="{AppThemeBinding Light=White, Dark={StaticResource BlackThemePage}}">
        <CollectionView x:Name="clPickerView" 
                        VerticalOptions="Fill"             
                        SelectionMode="Single"                     
                        SelectionChanged="clPickerView_SelectionChanged"/>
    </StackLayout>
    
</toolkit:Popup>
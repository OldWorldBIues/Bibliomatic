<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bibliomatic_MAUI_App.Views.ArticleDetailsView"
             xmlns:viewModels="clr-namespace:Bibliomatic_MAUI_App.ViewModels"
             xmlns:syncfusion="clr-namespace:Syncfusion.Maui.PdfViewer;assembly=Syncfusion.Maui.PdfViewer"
             x:DataType="viewModels:ArticleDetailsViewModel"
             Title="Article document">

    <Shell.BackButtonBehavior>
        <BackButtonBehavior Command="{Binding NavigateBackToArticleCommand}"                            
                            CommandParameter="{Binding Source={x:Reference PdfViewer}, Path=.}"/>
    </Shell.BackButtonBehavior>

    <ContentPage.BindingContext>
        <viewModels:ArticleDetailsViewModel x:Name="viewModel" />
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <syncfusion:SfPdfViewer x:Name="PdfViewer"                                 
                                DocumentSource="{Binding PdfDocumentStream}"/>
    </ContentPage.Content>   
</ContentPage>